<Window x:Class="DesktopBridgeToastSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopBridgeToastSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button Margin="0,100,0,0" Content="Send Toast to active Bing Map" Click="ButtonBing_Click" />
        <Button Margin="0,10,0,0" Content="Send Toast to active itself(protocol)" Click="ButtonProtocol_Click" />
        <StackPanel Orientation="Horizontal">
            <Label Content="IsRunningAsUwp: " />
            <Label x:Name="lbTips" />
        </StackPanel>
    </StackPanel>
</Window>
